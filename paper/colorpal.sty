% The lua code to transform ('FFFFFFF', 0) into 255
\begin{luacode}
function rgbcomponents(hexstr, i)
    return tonumber(string.sub(hexstr, i * 2 + 1, i * 2 + 2), 16) / 255
end
\end{luacode}

\newcommand{\definehexcolor}[2]{
\definecolor{#1}{rgb}{\directlua{tex.write(rgbcomponents("#2", 0))}, \directlua{tex.write(rgbcomponents("#2", 1))}, \directlua{tex.write(rgbcomponents("#2", 2))}}
}

